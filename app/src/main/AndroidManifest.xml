<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.user.projectsecond">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name_books"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.ListViewActivity"
            android:label="@string/app_name_books"
            android:theme="@style/CustomTheme">

        </activity>
        <activity
            android:name=".ui.GridViewActivity"
            android:label="@string/app_name_genres_movie"
            android:theme="@style/CuctomThemeGenresMovie">

        </activity>
        <activity
            android:name=".ui.RecyclerViewActivity"
            android:label="@string/app_name_books"
            android:theme="@style/CustomThemeBooks">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.ExpandableListViewActivity"
            android:label="@string/app_name_authors"
            android:theme="@style/CustomThemeBooks">

        </activity>

    </application>

</manifest>
