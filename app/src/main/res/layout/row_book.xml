<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/booksCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    card_view:cardCornerRadius="@dimen/card_corner_radius"
    card_view:cardElevation="@dimen/card_elevation">

    <RelativeLayout
        android:id="@+id/relative_layout_book"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:background="?android:selectableItemBackground">

        <ImageView
            android:id="@+id/img_books"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_img_books"
            android:scaleType="centerCrop" />

        <ImageButton
            android:id="@+id/btn_img_remove"
            android:layout_width="@dimen/img_btn_del_size"
            android:layout_height="@dimen/img_btn_del_size"
            android:layout_marginTop="@dimen/img_btn_del_mergin"
            android:layout_marginRight="@dimen/img_btn_del_mergin"
            android:layout_marginBottom="@dimen/img_btn_del_mergin"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/ic_delete" />

        <TextView
            android:id="@+id/txt_book_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="@dimen/text_size_book"
            android:layout_marginLeft="@dimen/img_btn_del_mergin"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/img_books"
            android:layout_toLeftOf="@id/btn_img_remove"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/primary_dark" />


    </RelativeLayout>


</android.support.v7.widget.CardView>